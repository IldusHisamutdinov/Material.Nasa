<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="Robin_Egg_Blue" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPersian_Blue</item>
        <item name="colorPrimaryDark">#E91E63</item>
        <item name="android:textColorPrimary">#FFEB3B</item>
        <item name="android:windowBackground">#00BCD4</item>
        <item name="android:navigationBarColor">@color/colorPersian_Blue</item>
        <item name="android:buttonStyleToggle">@android:color/holo_red_light</item>
    </style>

    <style name="Persian_Blue" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#1E21E9</item>
        <item name="android:textColorPrimary">#3BFFFF</item>
        <item name="android:windowBackground">#D00071D4</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Azalea" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">#7C9C7F</item>
        <item name="android:textColorPrimary">#9AE194</item>
        <item name="android:windowBackground">#F6C1CC</item>
        <item name="android:navigationBarColor">#F41707</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="colorControlActivated">@android:color/holo_purple</item>
    </style>

    <style name="Night" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorSilver_Sand</item>
    </style>

    <style name="TitleStyle" parent="ExplanationStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExplanationStyle">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/advent_pro_semibold</item>
    </style>

</resources>
